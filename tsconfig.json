{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}